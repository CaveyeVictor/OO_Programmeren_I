import java.util.Scanner;
public class oefening2
{
	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		System.out.print("Geef een strikt positieve zijde van een vierkant in: ");
		int zijde = input.nextInt();
		System.out.printf("De zijde = %s", zijde);
		System.out.println("De omtrek = %s", zijde*4);
		System.out.println("De oppervlakte = %s", zijde*zijde);
	}
}
