package ui;

import java.util.Scanner;

import domein.domein.domein.Berekening;

public class BerekeningApplicatie2 {

	public static void main(String[] args) {
		Scanner inputScanner = new Scanner(System.in);
		Berekening applicatie2 = new Berekening();
		
		for (int i = 0; i < 5; i++) {
			switch (i) {
			case 0:
				System.out.println("Geef parameter a in vgl a*x + b*y + c*z = d: ");
				int a = inputScanner.nextInt();
				break;
			case 1:
				System.out.println("Geef parameter b in vgl a*x + b*y + c*z = d: ");
				int b = inputScanner.nextInt();
				break;
			case 3:
				System.out.println("Geef parameter c in vgl a*x + b*y + c*z = d: ");
				int c = inputScanner.nextInt();
				break;
			case 4:
				System.out.println("Geef parameter d in vgl a*x + b*y + c*z = d: ");
				int d = inputScanner.nextInt();
				break;

			default:
				throw new IllegalArgumentException("Unexpected value: " + i);
			}
		}
		
		
		System.out.println(applicatie2.zoekAlleOplossingen(3, 2, -7, 5, 0, 10));

	}

}
