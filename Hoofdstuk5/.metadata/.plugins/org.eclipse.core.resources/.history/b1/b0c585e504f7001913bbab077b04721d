package domein;

public class Berekening {
	
	private int x;
	private int y;

	public Berekening(int x, int y) {
		setX(x);
		setY(y);
	}
	
	public String geefSom() {
		return "De som is" + (getX()+getY());
	}
	
	public String geefVerschil() {
		return "Het verschil is" + (getX()-getY());
	}
	
	public String geefProduct() {
		return "Het product is" + (getX()*getY());
	}
	
	public String geefQuotient() {
		return "Het product is" + (getX()/getY());
	}
	
	
	public int getX() {
		return x;
	}

	private void setX(int x) {
		this.x = x;
	}

	public int getY() {
		return y;
	}

	private void setY(int y) {
		this.y = y;
	}

}
